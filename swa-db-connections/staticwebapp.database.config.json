{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.1.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')",
    "options": {
      "set-session-context": true
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest",
      "request-body-strict": true
    },
    "host": {
      "cors": {
        "origins": ["http://localhost:4280", "http://localhost:3000"],
        "allow-credentials": true
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Item": {
      "source": {
        "object": "dbo.Items",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/item",
        "methods": ["get", "post", "patch"]
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "volunteer"
        }
      ]
    },
    "InventoryWithCategory": {
      "source": {
        "object": "InventoryWithCategory",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/inventorywithcategory"
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "ItemsByCategory": {
      "source": {
        "object": "ItemsByCategory",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/itemsbycategory"
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "Category": {
      "source": {
        "object": "dbo.Categories",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/category"
      },
      "permissions": [
        {
          "actions": ["*"],
          "role": "admin"
        },
        {
          "actions": ["read"],
          "role": "volunteer"
        }
      ]
    },
    "Categories": {
      "source": {
        "object": "dbo.Categories",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/categories",
        "methods": ["get", "post", "patch"]
      },
      "permissions": [
        {
          "actions": ["*"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "anonymous"
        }
      ]
    },
    "InventoryWithCategory": {
      "source": {
        "object": "InventoryWithCategory",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/inventorywithcategory",
        "methods": ["get", "post", "patch"]
      },
      "permissions": [
        {
          "actions": ["*"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "anonymous"
        }
      ]
    },
    "ItemsByCategory": {
      "source": {
        "object": "ItemsByCategory",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/itemsbycategory",
        "methods": ["get", "post", "patch"]
      },
      "permissions": [
        {
          "actions": ["*"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "anonymous"
        }
      ]
    },
    "Volunteer": {
      "source": {
        "object": "dbo.Volunteers",
        "type": "table",
        "key-fields": []
      },
      "rest": {
        "enabled": true,
        "path": "/volunteer"
      },
      "permissions": [
        {
          "actions": ["read"],
          "role": "admin"
        },
        {
          "actions": ["read", "create", "update"],
          "role": "volunteer"
        }
      ]
    },
    "VerifyPin": {
      "source": {
        "object": "dbo.VerifyVolunteerPin",
        "type": "stored-procedure"
      },
      "rest": {
        "enabled": true,
        "path": "/verify-pin"
      },
      "permissions": [
        {
          "actions": ["execute"],
          "role": "volunteer"
        }
      ]
    }
  }
}
